{
    "name": "eppz-code",
    "displayName": "eppz! Code",
    "description": "C# code coloring with sense (perfect for Unity).",
    "version": "0.6.0",
    "publisher": "eppz",
    "engines": { "vscode": "^1.10.0" },
    "extensionDependencies": [ "cs" ],    
    "categories": [ "Languages", "Themes" ],
    "contributes":
    {
        "languages":
        [
            {
                "id": "cs_official",
                "aliases": [ "C# (official)" ],
                "extensions": [ ".cs_official" ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "cs_extensions",
                "aliases": [ "C# (extensions)" ],
                "extensions": [ ".cs_extensions" ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "cs_extended",
                "aliases": [ "C# (extended)" ],
                "extensions": [ ".cs_extended" ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "cs",
                "aliases": [ "C#" ],
                "extensions": [ ".cs" ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars":
        [
            {
                "language": "cs_official",
                "scopeName": "source.cs.official",
                "path": "./syntaxes/csharp.official.tmLanguage"
            },
            {
                "language": "cs_extensions",
                "scopeName": "source.cs.extensions",
                "path": "./syntaxes/source.cs.extensions.json"
            },
            {
                "language": "cs_extended",
                "scopeName": "source.cs.extended",
                "path": "./syntaxes/csharp.extended.tmLanguage"
            },
            {
                "language": "cs",
                "scopeName": "source.cs",
                "path": "./syntaxes/source.cs.json"
            }
        ],
        "themes":
        [
            {
                "label": "eppz! Code",
                "uiTheme": "vs-dark",
                "path": "./themes/default/eppz-code.json"
            },
            {
                "label": "eppz! Code (deep)",
                "uiTheme": "vs-dark",
                "path": "./themes/default/eppz-code.deep.json"
            },
            {
                "label": "eppz! Code (flip)",
                "uiTheme": "vs-dark",
                "path": "./themes/flip/eppz-code.json"
            }
        ]
    }
}