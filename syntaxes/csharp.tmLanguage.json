{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "C#",
  	"fileTypes": [ "cs" ],
	"scopeName": "source.cs",
	"patterns":
	[
		

		{
			"name": "regions.using.cs",
			"comment": "A wrapper around `using` directives at the top.",
			"begin": "(?=\\b(?:using)\\b)",
			"end": "(?=;)",
			"patterns":
			[
				{ "include": "source.cs.original#using-directive" },
				{ "include": "source.cs.original#using-statement" }
			]
		},
		{
			"name": "regions.namespace.cs",
			"comment": "A wrapper around `namespace` declarations excluding content inside `{}`.",
			"begin": "\\b(namespace)\\s+",
			"end": "(?=\\{)",
			"beginCaptures": { "1": { "name": "keyword.other.namespace.cs" } },
			"patterns": [
				{
				"include": "source.cs.original#comment"
				},
				{
					"name": "entity.name.type.namespace.cs",
					"match": "[_[:alpha:]][_[:alnum:]]*"
				},
				{
				"include": "source.cs.original#punctuation-accessor"
				}
			]
		},
		{ "include": "source.injections" },
		{ "include": "source.cs.original" }	
	]
}